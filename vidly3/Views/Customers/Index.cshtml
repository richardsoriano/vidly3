@model IEnumerable<vidly3.Models.Customer>

<h2>Customers</h2>
@if (!Model.Any())
{
    <p>No Customers</p>
}
<table><thead>
        <tr><th>Customer</th></tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr><td>@Html.ActionLink(@customer.Name, "Details","Customers",new{id = customer.Id},null)</td></tr>
        }
    </tbody>
</table>
@model  IEnumerable<vidly3.Models.Movie>

<h2>Movie</h2>
<table class="table table-bordered table-hover">
    @Html.ActionLink("New Movies","New","Movies", new{},new{@class="btn btn-primary"})
    <thead><tr><th>Movie</th></tr></thead>
    <tbody>
    @foreach (var movie in Model)
        {
            <tr><td>@Html.ActionLink(@movie.Name, "Edit","Movies", new {id = movie.Id}, null)</td></tr>
        }
    </tbody>
</table>
